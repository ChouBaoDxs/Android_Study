<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chou_ti_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slidingmenu_background"
    tools:context="com.choubao.www.slidingmenu.ChouTiMenuActivity">
    <!--android:background="@color/colorAccent"-->
    <!--tools:context="com.choubao.www.slidingmenu.ChouTiMenuActivity">-->

    <!--<HorizontalScrollView-->
    <com.choubao.www.slidingmenu.SlidingMenu_ChouTi
        android:id="@+id/slidingMenu_ChouTi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/left_menu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF8877">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="toggleMenu"
                    android:text="菜单"/>

            </LinearLayout>

        </LinearLayout>
    </com.choubao.www.slidingmenu.SlidingMenu_ChouTi>

</RelativeLayout>
