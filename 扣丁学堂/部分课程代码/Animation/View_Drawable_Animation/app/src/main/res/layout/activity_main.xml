<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.choubao.www.view_drawable_animation.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/she1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <Button
        android:text="alpha_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_alpha_xml"
        android:textAllCaps="false"/>

    <Button
        android:text="alpha_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_alpha_code"
        android:textAllCaps="false"
        android:layout_alignStart="@+id/button_scale_xml"
        android:layout_below="@+id/button_alpha_xml" />

    <Button
        android:text="scale_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_alpha_code"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_scale_xml"
        android:textAllCaps="false"/>

    <Button
        android:text="translate_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_scale_xml"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_translate_xml"
        android:textAllCaps="false"/>

    <Button
        android:text="rotate_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_translate_xml"
        android:layout_alignParentEnd="true"
        android:id="@+id/button_rotate_xml"
        android:textAllCaps="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anim_list"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />


</RelativeLayout>
