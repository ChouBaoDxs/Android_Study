<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_thread_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.choubao.androidtutorial.ThreadTutorialActivity">

    <Button
        android:text="主线程ANR测试"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTestANR" />

    <Button
        android:text="Android启动线程方式一"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnThread01" />

    <Button
        android:text="Android启动线程方式二"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnThread02" />

    <Button
        android:text="Android启动线程方式三"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnThread03" />

</LinearLayout>
